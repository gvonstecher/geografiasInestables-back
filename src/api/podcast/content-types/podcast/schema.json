{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "singularName": "podcast",
    "pluralName": "podcasts",
    "displayName": "Podcast",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Titulo": {
      "type": "string",
      "required": true
    },
    "Cuerpoo": {
      "type": "richtext"
    },
    "ImagenDestacada": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "Link": {
      "type": "text"
    },
    "Duracion": {
      "type": "string"
    },
    "DescripcionCorta": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "Titulo"
    },
    "categoria_podcast": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categoria-podcast.categoria-podcast",
      "inversedBy": "podcasts"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "podcasts"
    },
    "autor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::autor.autor",
      "inversedBy": "podcasts"
    },
    "Cuerpo": {
      "type": "customField",
      "options": {
        "preset": "toolbar"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    }
  }
}
